<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CardGame.BasicFXMLController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <Rectangle arcHeight="5.0" fill="#25a811" height="400.0" smooth="false" stroke="BLACK" strokeType="INSIDE" strokeWidth="10.0" width="640.0" />
            <ImageView fx:id="deckImage" fitHeight="120.0" fitWidth="85.0" layoutX="37.0" layoutY="33.0">
               <image>
                  <Image url="@../../resources/card.images/back.png" />
               </image>
            </ImageView>
            <Button fx:id="hitButton" layoutX="214.0" layoutY="362.0" mnemonicParsing="false" onAction="#HitAction" text="Hit" visible="false">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button> 
            <Button fx:id="standButton" layoutX="365.0" layoutY="362.0" mnemonicParsing="false" onAction="#StandAction" text="Stand" visible="false">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <Text fill="WHITE" layoutX="56.0" layoutY="175.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Deck">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Text fill="WHITE" layoutX="254.0" layoutY="385.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Your Hand">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Text fill="WHITE" layoutX="239.0" layoutY="29.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Dealer's Hand">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Text fill="WHITE" layoutX="483.0" layoutY="380.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Your Score:">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Text fx:id="playerScoreValue" fill="WHITE" layoutX="594.0" layoutY="379.0" strokeType="OUTSIDE" strokeWidth="0.0" text="0">
               <font>
                  <Font size="30.0" />
               </font>
            </Text>
            <Text fx:id="bustText" fill="RED" layoutX="167.0" layoutY="222.0" strokeType="OUTSIDE" strokeWidth="0.0" text="YOU BUST!" visible="false">
               <font>
                  <Font size="63.0" />
               </font>
            </Text>
            <Text fx:id="winText" fill="WHITE" layoutX="163.0" layoutY="222.0" strokeType="OUTSIDE" strokeWidth="0.0" text="YOU WIN!" visible="false">
               <font>
                  <Font size="63.0" />
               </font>
            </Text>
            <Text fill="WHITE" layoutX="453.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Dealer's Score:">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Text fx:id="dealerScoreValue" fill="WHITE" layoutX="596.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="??">
               <font>
                  <Font size="30.0" />
               </font>
            </Text>
            <Button fx:id="startButton" layoutX="248.0" layoutY="178.0" mnemonicParsing="false" onAction="#StartGame" text="START GAME">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="againButton" layoutX="248.0" layoutY="276.0" mnemonicParsing="false" onAction="#reset" text="GO AGAIN?" visible="false">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
      </children>
    </AnchorPane>
  </children>
</VBox>
